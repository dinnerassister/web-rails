<!DOCTYPE html>
<html>
<head>
  <title>WebRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
</head>
<body>
  <header>
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Dinner Assister</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav nav-main">
            <li><a href="/">Browse</a></li>
            <li><a href="/recipes/new">Add Recipe</a></li>
          </ul>
          <ul class="nav navbar-nav nav-profile">
            <% if user_signed_in? %>
              <li><a href="/user/edit">Hi <%= current_user.name %>!</a></li>
              <li><a href="/users/sign_out"  rel="nofollow" data-method="delete" >Log out</a></li>
            <% else %>
              <li><a href="/users/sign_up">Sign up</a></li>
              <li><a href="/users/sign_in">Log in</a></li>
            <% end %>
          </ul>
        </div>
    </nav>
  </header>

  <div class="banner">
    <div class="ci3">
      <div class="item">
        <img src="/images/scallop.JPG" alt="...">
      </div>
      <div class="item">
        <img src="/images/scallop.JPG" alt="...">
      </div>
      <div class="item">
        <img src="/images/scallop.JPG" alt="...">
      </div>
    </div>
  </div>

  <div class="container content">

   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>


    <%= yield %>
  </div>

  <script type="text/javascript" src="ci3_carousel.js"></script>
  <script type="text/javascript">
    $('.ci3').ci3();
  </script>
</body>
</html>
