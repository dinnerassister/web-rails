<!DOCTYPE html>
<html>
<head>
  <title>Dinner Assister</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
  <header>
    <nav class="navbar navbar-inverse navbar-static-top container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Dinner Assister</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav nav-main">
            <li><a href="/">Browse</a></li>
            <li><a href="/recipes/new">Add Recipe</a></li>
          </ul>
          <ul class="nav navbar-nav nav-profile">
            <% if user_signed_in? %>
              <li><a href="/user/edit">Hi <%= current_user.name %>!</a></li>
              <li><a href="/users/sign_out"  rel="nofollow" data-method="delete" >Log out</a></li>
            <% else %>
              <li><a href="/users/sign_up">Sign up</a></li>
              <li><a href="/users/sign_in">Log in</a></li>
            <% end %>
          </ul>
        </div>
    </nav>
  </header>

  <%= yield(:banner) %>

  <div class="container content">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
