<!DOCTYPE html>
<html>
<head>
  <title>Dinner Assister</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag 'registration' %>
</head>
<body>
  <div class="registration content container">
    <div class="title">
      <a href="/" data-no-turbolink="true">Dinner Assister</a>
    </div>
    <h1>Log in with:</h1>
    <div class="social_icons">
      <a id="google_sign_in" href="/users/auth/google_oauth2"><i class="fa fa-google-plus-square google"></i></a>
      <a id="twitter_sign_in" href="/users/auth/twitter"><i class="fa fa-twitter-square twitter"></i></a>
      <a id="facebook_sign_in" href="/users/auth/facebook"><i class="fa fa-facebook-square facebook"></i></a>
    </div>

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>

  </div>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-65070010-1', 'auto');
    ga('send', 'pageview');

  </script>
</body>

</html>
