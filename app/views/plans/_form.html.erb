<div class="search recipe_list col-sm-10">
  <ul class="row">
    <% @recipes.each do |recipe| %>
      <li class="col-sm-3">
        <div>
          <a href="/recipes/<%= recipe.id %>">
            <input name="recipe[id][]" value="<%= recipe.id %>" type="hidden">
            <%= image_tag recipe.photo.url(:small) %>
            <label><%= shorten(recipe.name) %></label>
          </a>
        </div>
      </li>
    <% end %>
  </ul>
</div>
