<div class="meal_plan">
<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="date">
    <div class="field form-group">
      <%= f.label :start_date %><br>
      <input class="datepicker" placeholder="Start date" value="<%= @plan.start_date %>" id="start_date" type="text">
    </div>
    <div class="field form-group">
      <%= f.label :end_date %><br>
      <input class="datepicker" placeholder="End date" value="<%= @plan.end_date %>" id="end_date" type="text">
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

  </div>
<% end %>
<script type="text/javascript">
  $(document).ready(function() {
    $('.datepicker').datepicker();
  });

  </script>

