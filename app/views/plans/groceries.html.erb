  <li><input class="check_strike" type="checkbox">sugar and salt to taste</li>

  <h3>Misc</h3>
  <li><input class="check_strike" type="checkbox">fried tofu or gluten</li>
  <li><input class="check_strike" type="checkbox">pho noodles</li>
  <li><input class="check_strike" type="checkbox">1/2 lb fried tofu</li>
</ul>

<script type="text/javascript">
$(document).ready(function() {
  $('.check_strike').click(function() {
    var decorValue = "none";
    if ($(this).is(":checked")) {
      decorValue = "line-through"
    } 
    $(this).parent().css('text-decoration', decorValue);
  });
});
</script>
